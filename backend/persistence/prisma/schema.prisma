generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_PRISMA_URL")
}

enum OrderState {
  IN_PROGRESS
  CANCELED
  COMPLETED
}

model Order {
  id            Int           @id @default(autoincrement())
  title         String
  description   String
  state         OrderState    @default(IN_PROGRESS)
  created       DateTime      @default(now())
}